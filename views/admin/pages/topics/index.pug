extends ../../layouts/default.pug

block main
    h1(class="mb-4") Quản lý chủ đề
    .card.mb-3
            .card-header Danh sách
            .card-body 
                .row 
                    .col-10
                    .col-2.text-right
                        a( 
                            href=`${prefixAdmin}/topic/create`
                            class="btn btn-outline-success"

                        ) + Thêm mới
                table(
                    class="table table-hover table-sm"
                )
                    thead 
                        tr 
                            th STT 
                            th Hình ảnh 
                            th Tiêu đề
                            th Trạng thái 
                            th Hành động
                    tbody 
                        each item,index in topics 
                            tr
                                td #{index+1}
                                td 
                                    img(
                                        src=item.avatar 
                                        alt=item.title 
                                        width="100px"
                                        height="auto"
                                    )
                                td #{item.title} 
                                td 
                                    if(item.status=="active")
                                        a(
                                            href="javascript:;" 
                                            class="badge badge-success"
                                            data-id= item.id 
                                            data-status=item.status
                                            button-change-status
                                        ) Hoạt động
                                    else
                                        a(
                                            href="javascript:;" 
                                            class="badge badge-danger"
                                            data-status=item.status 
                                            data-id=item.id 
                                            button-change-status
                                        ) Dừng hoạt động  
                                td 
                                    a(
                                        href=`${prefixAdmin}/topics/detail/${item.id}`
                                        class="btn btn-secondary btn-sm"
                                    ) Chi tiết

                                    a(
                                        href=`${prefixAdmin}/topics/update/${item.id}`
                                        class="btn btn-warning btn-sm") Sửa

                                    button(class="btn btn-danger btn-sm ml-l"
                                            button-delete-item
                                            button-id=item.id
                                        ) Xóa

                            