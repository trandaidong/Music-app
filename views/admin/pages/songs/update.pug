extends ../../layouts/default.pug

block main
    h1(class="mb-4") #{pageTitle}

    form(
            action=`${prefixAdmin}/songs/update/${song.id}?_method=PATCH`
            method="POST"
            enctype="multipart/form-data"
        )
            div(class="form-group")
                lable(for="title") Tiêu đề
                input(
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                    required
                    value=song.title
                )
            
            div(class="form-group")
                lable(for="topic") Chủ đề
                select(
                    name="topicId"
                    id="topic"
                    class="form-control"
                    require
                )
                    option(value="" disabled selected) -- Chọn chủ đề --
                    each item in topics 
                        option(
                            value=item.id
                            selected= (item.id==song.topicId? true: false)
                        ) #{item.title}

            div(class="form-group")
                lable(for="singer") Ca sĩ
                select(
                    name="singerId"
                    id="singer"
                    class="form-control"
                    require
                )
                    option(value="" disabled selected) -- Chọn ca sĩ --
                    each item in singers 
                        option(
                            value=item.id
                            selected= (item.id==song.singerId? true: false)
                        ) #{item.fullName}

            div(
                class="form-group"
                upload-image
            )
                lable(for="avatar") Ảnh
                input(
                    type="file"
                    class="form-control-file"
                    id="avatar"
                    name="avatar"
                    accept="image/*"
                    upload-image-input
                )
                img(
                    src=song.avatar
                    upload-image-preview 
                    class="image-preview"
                )
            div(class="form-group" upload-audio)
                lable(for="audio") Âm thanh
                input(
                    type="file"
                    class="form-control-file"
                    id="audio"
                    name="audio"
                    accept="audio/*"
                    upload-audio-input
                )
                audio(controls upload-audio-preview)
                    source(src=song.audio)

            div(class="form-group")
                lable(for="lyrics") Lời bài hát
                textarea(
                    class="form-control"
                    id="lyrics"
                    name="lyrics"
                    rows="20"
                ) #{song.lyrics}

            div(class="form-group")
                lable(for="desc") Mô tả
                textarea(
                    class="form-control textarea-mce"
                    id="desc"
                    name="description"
                    rows="5"
                    textarea-mce
                ) #{song.description}
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked = (song.status=="active"? true : false)
                )
                label(for="statusActive" class="form-check-label") Hoạt động 
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusInActive"
                    name="status"
                    value="inactive"
                    checked = (song.status=="inactive"? true : false)
                )
                label(for="statusInActive" class="form-check-label") Dừng hoạt động
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Cập nhật


                            